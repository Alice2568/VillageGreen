{% extends 'base.html.twig' %}

{% block title %}Hello {{ sousCategorie.nom }}!{% endblock %}

{% block body %}
<h1>{{ sousCategorie.nom }}</h1>

<div class="container">
    <div class="row">
        {% for produit in sousCategorie.produits %}
            <div class="col-12 col-sm-6 col-md-4 col-xl-3">
            <img src="{{produit.image}}">
                <a href="/produit/{{produit.id}}">{{produit.nom}}
                </a>
            </div>
        {% else %}
            <p>Aucun produit dans cette sous-cat√©gorie.</p>
        {% endfor %}
    </div>
</div>

{% endblock %}